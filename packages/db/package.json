{
  "name": "@tasks/db",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:up": "dotenv -e .env -- kysely migrate:latest",
    "db:up:prod": "kysely migrate:latest",
    "db:create": "dotenv -e .env -- kysely migrate:make",
    "db:generate-index": "tsx scripts/generate-migrations-index.ts",
    "db:check-index": "tsx scripts/check-migrations-index.ts",
    "migrate": "tsx scripts/migrate-cli.ts"
  },
  "dependencies": {
    "kysely": "^0.28.8",
    "kysely-ctl": "^0.19.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}