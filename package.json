{
  "name": "@tasks/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:prod": "turbo build:prod",
    "dev": "turbo dev",
    "format": "biome format --write .",
    "lint": "biome check .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:ui": "vitest --ui",
    "i18n": "turbo i18n",
    "fullcheck": "turbo check:fix typecheck test",
    "web": "pnpm --dir apps/web",
    "core": "pnpm --dir packages/core",
    "db": "pnpm --dir packages/db",
    "db:up": "pnpm --dir packages/db db:up",
    "db:up:prod": "pnpm --dir packages/db db:up:prod",
    "db:create": "pnpm --dir packages/db db:create"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/github": "^12.0.2",
    "@tasks/typescript-config": "workspace:*",
    "@vitest/ui": "^4.0.8",
    "lefthook": "^1.13.6",
    "semantic-release": "^25.0.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=22"
  }
}
