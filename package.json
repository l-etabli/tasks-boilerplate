{
  "name": "@tasks/root",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:prod": "turbo build:prod",
    "dev": "turbo dev",
    "format": "biome format --write .",
    "lint": "biome check .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo typecheck",
    "i18n": "turbo i18n",
    "fullcheck": "turbo check:fix typecheck test",
    "web": "pnpm --dir apps/web",
    "core": "pnpm --dir packages/core",
    "db": "pnpm --dir packages/db",
    "db:up": "pnpm --dir packages/db db:up",
    "db:create": "pnpm --dir packages/db db:create"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tasks/typescript-config": "workspace:*",
    "lefthook": "^1.13.6",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=22"
  }
}
