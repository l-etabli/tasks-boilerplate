DATABASE_URL=postgresql://user:pg_password@localhost:5432/db

# Better Auth
BETTER_AUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Environment (local, development, staging, production)
ENVIRONMENT=local

# Sentry (optional - get from https://sentry.io)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# EMAIL config
EMAIL_GATEWAY=inMemory
# For production, use resend:
# EMAIL_GATEWAY=resend
# EMAIL_RESEND_API_KEY=your-resend-api-key
# EMAIL_FROM=contact@yourdomain.com

# Umami tracking (optional - get from your Umami instance)
# UMAMI_SCRIPT_URL=https://your-umami-instance.com/script.js
# UMAMI_WEBSITE_ID=your-website-id
