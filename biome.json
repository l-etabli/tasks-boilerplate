{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "css": {
    "parser": {
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["warn", "error", "info"]
          }
        },
        "noUnknownAtRules": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "a11y": {
        "useSemanticElements": "off"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "apps/*/src/**/*",
      "packages/*/src/**/*",
      "apps/web/.config",
      "!apps/web/src/routeTree.gen.ts",
      "!apps/web/src/i18n/i18n-types.ts",
      "!apps/web/src/i18n/i18n-react.tsx",
      "!apps/web/src/i18n/i18n-util.ts",
      "!apps/web/src/i18n/i18n-util.sync.ts",
      "!apps/web/src/i18n/i18n-util.async.ts",
      "!packages/db/src/migrations/index.ts"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    }
  ]
}
