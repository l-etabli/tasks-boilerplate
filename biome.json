{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noConsoleLog": "error"
      },
      "complexity": {
        "noBannedTypes": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "**/node_modules",
      "**/.next",
      "**/dist",
      "**/public",
      "**/.turbo",
      "**/routeTree.gen.ts",
      "**/i18n-types.ts",
      "**/i18n-react.tsx",
      "**/i18n-util.ts",
      "**/i18n-util.sync.ts",
      "**/i18n-util.async.ts"
    ],
    "include": ["apps/*/src/**/*", "packages/*/src/**/*", "apps/web/.config"]
  }
}
